---
    import LinkButton from './LinkButton.astro';
    interface Props{
        title: string
        description: string
        place: string
        link?:string
        date: string
    }

    const {title, description, place, link, date} = Astro.props
---




<!-- <section class="grid grid-cols-1 md:grid-cols-[40%_60%] gap-8"> -->
<div class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-white/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]">
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-purple-400 -left-[42px] absolute rounded-full text-5xl">â€¢</span>
      <h3 class="text-xl font-semibold text-purple-400 mt-2 ">
        {title}
      </h3>
      <h4 class="text-lg font-semibold text-purple-200/90 mt-1">
        {place}
      </h4>
      <time
        class="p-0 m-0 text-sm font-normal leading-none text-white/80"
        >
        {date}
      </time>
    </div>
  </div>

  <div class="relative flex flex-col gap-2 pb-4 text-white-600 dark:text-gray-300 md:col-span-3 text-pretty">
      {description}
    {
      link && 
      <LinkButton link={link}> 
        Certificate
        <svg
            class="w-3 h-3 ms-2 rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
        >
            <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      
      </LinkButton>
    }
  </div>

</div>
